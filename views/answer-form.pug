extends layout.pug

block content
    include nav-bar.pug
    div(class='answer-container')
        form(action=`/questions/${questionId}/answer` method="post" class="q-a-forms")
            input(type="hidden" name="_csrf" value=csrfToken)
            label Answering Question: #{title}
            label(for="message") Answer:
            textarea(name="message" value=message required)
            label(for="answerImg1") img url:
            input(type="text" name="answerImg1" value=answerImg1)
            label(for="answerImg2") img url:
            input(type="text" name="answerImg2" value=answerImg2)
            label(for="answerImg3") img url:
            input(type="text" name="answerImg3" value=answerImg3)
            button(type="submit" class="orange-button") Post Answer
            div(class="cancel-edit")
                    a(href=`/questions`) Cancel
