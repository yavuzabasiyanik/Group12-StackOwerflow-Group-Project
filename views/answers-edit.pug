extends layout.pug

block content
    include nav-bar.pug
    div(class="answer-container")
        form(action=`/questions/answers/${answer.id}/edit` method="post" class="q-a-forms")
            input(type="hidden" name="_csrf" value=csrfToken)
            label #{title}
            label(for="message") Answer:
            textarea(name="message")=answer.message
            label(for="answerImg1") img url:
            input(type="text" name="answerImg1" value=answer.answerImg1)
            label(for="answerImg2") img url:
            input(type="text" name="answerImg2" value=answer.answerImg2)
            label(for="answerImg3") img url:
            input(type="text" name="answerImg3" value=answer.answerImg3)
            button(type="submit" class="orange__button") Save Changes
            div(class="cancel-edit grey__button")
                a(href=`/questions/${answer.questionId}`) Cancel
    include footer.pug
    
